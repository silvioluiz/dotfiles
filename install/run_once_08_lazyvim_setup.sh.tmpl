#!/usr/bin/env bash
set -euo pipefail
source "$(dirname "$0")/helpers/init_macos_env.sh"

# Clona LazyVim starter em ~/.config/lazyvim se ainda n√£o existir
if [ ! -d "$HOME/.config/lazyvim" ]; then
  echo "[+] Clonando LazyVim starter em ~/.config/lazyvim"
  git clone https://github.com/LazyVim/starter "$HOME/.config/lazyvim"
  rm -rf "$HOME/.config/lazyvim/.git"
fi
