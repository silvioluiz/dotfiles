// ~/.config/zellij/config.kdl
theme "default"
default_mode "normal"
keybinds {
  normal {
    "Alt h" "MoveFocusLeft"
    "Alt l" "MoveFocusRight"
    "Alt j" "MoveFocusDown"
    "Alt k" "MoveFocusUp"
    "Alt v" "NewPaneSplit"
    "Alt s" "NewPaneVertical"
    "Alt q" "Quit"
    "Alt w" "CloseFocus"
    "Alt r" "ReloadConfig"
  }
}
scrollback_lines 10000
copy_on_select true
layout "default"
