# dot_zprofile.tmpl
# ~/.zprofile — executado apenas em LOGIN shells
# Use para variáveis de sessão, não para PATH essencial (isso já está no ~/.zshenv).

# Homebrew shellenv (para inicializar variáveis extras: MANPATH, INFOPATH etc.)
{{- if eq .chezmoi.os "darwin" }}
  if command -v brew >/dev/null 2>&1; then
    eval "$(brew shellenv)"
  else
    # Fallback direto por arquitetura
    {{- if eq .chezmoi.arch "arm64" }}
      [ -x /opt/homebrew/bin/brew ] && eval "$(/opt/homebrew/bin/brew shellenv)"
    {{- else }}
      [ -x /usr/local/bin/brew ] && eval "$(/usr/local/bin/brew shellenv)"
    {{- end }}
  fi
{{- else if eq .chezmoi.os "linux" }}
  # Linuxbrew (Ubuntu/Debian)
  if [ -x /home/linuxbrew/.linuxbrew/bin/brew ]; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  fi
{{- end }}

# Outras variáveis globais de sessão podem ir aqui:
# export LANG=pt_BR.UTF-8
export EDITOR=nvim
